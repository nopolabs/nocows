<!doctype html>
<html lang="en">
<head>
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">

    <script src="js/api.js"></script>
    <script src="js/bee.js"></script>
    <script src="js/proof.js"></script>
    <script src="js/shuffle.js"></script>
    <script src="js/nocows.js"></script>
    <style>
        #letter-0 { font-weight: bold; }
    </style>
</head>
<body>
<div class="card">
    <div class="card-body">
        <h2 class="card-title">No Cows</h2>
        <form id="form">
            <input type="hidden" id="hive" value="{{ hive }}"/>
            <div class="row mb-2 ml-5">
                <input type="button" class="letter col-sm-1" id="letter-1" value=""/>
                <input type="button" class="letter col-sm-1" id="letter-2" value=""/>
            </div>
            <div class="row mb-2 ml-3">
                <input type="button" class="letter col-sm-1" id="letter-3" value=""/>
                <input type="button" class="letter col-sm-1" id="letter-0" value=""/>
                <input type="button" class="letter col-sm-1" id="letter-4" value=""/>
            </div>
            <div class="row mb-2 ml-5">
                <input type="button" class="letter col-sm-1" id="letter-5" value=""/>
                <input type="button" class="letter col-sm-1" id="letter-6" value=""/>
            </div>
            <div class="row mb-2 ml-3">
                <input type="button" id="check-button" value="Check"/>
                <input type="button" id="rotate-button" value="Rotate"/>
                <input type="button" id="erase-button" value="Erase"/>
            </div>
            <div class="row mb-2">
                <label for="word"></label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="word" name="word" value=""/>
                </div>
            </div>
            <div class="row mb-2">
                Score: <span id="score">0</span>
            </div>
            <div class="row mb-2">
                Words: <span id="words"></span>
            </div>
            <div class="row mb-2">
                <input type="button" id="solution-button" value="Solution"/>
            </div>
        </form>
    </div>
</div>

</body>
</html>